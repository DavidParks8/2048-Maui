<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
   xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
   xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
   xmlns:strings="clr-namespace:TwentyFortyEight.Maui.Resources.Strings"
   x:Class="TwentyFortyEight.Maui.AboutPage"
   Title="{x:Static strings:AppStrings.AboutPageTitle}"
   Background="{AppThemeBinding Light={StaticResource GamePageBackgroundLight}, Dark={StaticResource GamePageBackgroundDark}}">

   <ScrollView Padding="20">
      <VerticalStackLayout Spacing="20" MaximumWidthRequest="600" HorizontalOptions="Center">

         <!-- Main Message Section -->
         <Border
            Background="{AppThemeBinding Light={StaticResource GamePanelBackgroundLight}, Dark={StaticResource GamePanelBackgroundDark}}"
            Stroke="Transparent"
            StrokeShape="RoundRectangle 10"
            Padding="20">
            <VerticalStackLayout Spacing="16">
               <Label
                  Text="{x:Static strings:AppStrings.ForTaliaTitle}"
                  FontSize="24"
                  FontAttributes="Bold"
                  TextColor="{AppThemeBinding Light={StaticResource TileTextDark}, Dark={StaticResource TileTextLight}}"
                  HorizontalOptions="Center" />

               <Label
                  FontSize="16"
                  TextColor="{AppThemeBinding Light={StaticResource TileTextDark}, Dark={StaticResource TileTextLight}}"
                  LineHeight="1.5"
                  HorizontalTextAlignment="Center">
                  <Label.FormattedText>
                     <FormattedString>
                        <Span Text="{x:Static strings:AppStrings.AboutMessagePart1}" />
                        <Span Text="&#x0a;&#x0a;" />
                        <Span Text="{x:Static strings:AppStrings.AboutMessagePart2}" />
                        <Span Text="&#x0a;&#x0a;" />
                        <Span Text="{x:Static strings:AppStrings.AboutMessagePart3}" />
                        <Span Text="&#x0a;&#x0a;" />
                        <Span Text="{x:Static strings:AppStrings.AboutMessageSignature}" FontAttributes="Italic" />
                     </FormattedString>
                  </Label.FormattedText>
               </Label>
            </VerticalStackLayout>
         </Border>

         <!-- App Info Section -->
         <Border
            Background="{AppThemeBinding Light={StaticResource GamePanelBackgroundLight}, Dark={StaticResource GamePanelBackgroundDark}}"
            Stroke="Transparent"
            StrokeShape="RoundRectangle 10"
            Padding="20">
            <VerticalStackLayout Spacing="12">
               <Label
                  Text="{x:Static strings:AppStrings.AboutTheAppSection}"
                  FontSize="12"
                  FontAttributes="Bold"
                  TextColor="{AppThemeBinding Light={StaticResource SectionHeaderLight}, Dark={StaticResource SectionHeaderDark}}"
                  Margin="0,0,0,4" />

               <Label
                  Text="{x:Static strings:AppStrings.AppNameForTalia}"
                  FontSize="18"
                  FontAttributes="Bold"
                  TextColor="{AppThemeBinding Light={StaticResource TileTextDark}, Dark={StaticResource TileTextLight}}" />

               <Label
                  Text="{x:Static strings:AppStrings.AppDescription}"
                  FontSize="14"
                  TextColor="{AppThemeBinding Light={StaticResource TileTextDark}, Dark={StaticResource TileTextLight}}"
                  LineHeight="1.4" />
            </VerticalStackLayout>
         </Border>

         <!-- Support Section -->
         <Border
            Background="{AppThemeBinding Light={StaticResource GamePanelBackgroundLight}, Dark={StaticResource GamePanelBackgroundDark}}"
            Stroke="Transparent"
            StrokeShape="RoundRectangle 10"
            Padding="20">
            <VerticalStackLayout Spacing="12">
               <Label
                  Text="{x:Static strings:AppStrings.SupportSection}"
                  FontSize="12"
                  FontAttributes="Bold"
                  TextColor="{AppThemeBinding Light={StaticResource SectionHeaderLight}, Dark={StaticResource SectionHeaderDark}}"
                  Margin="0,0,0,4" />

               <Label
                  Text="{x:Static strings:AppStrings.NeedHelpOrBug}"
                  FontSize="14"
                  TextColor="{AppThemeBinding Light={StaticResource TileTextDark}, Dark={StaticResource TileTextLight}}" />

               <Button
                  x:Name="GitHubIssuesButton"
                  Text="{x:Static strings:AppStrings.ReportAnIssue}"
                  FontSize="16"
                  FontAttributes="Bold"
                  BackgroundColor="{AppThemeBinding Light={StaticResource GameButtonBackgroundLight}, Dark={StaticResource GameButtonBackgroundDark}}"
                  TextColor="White"
                  CornerRadius="5"
                  Padding="20,12"
                  Clicked="OnGitHubIssuesClicked"
                  SemanticProperties.Description="{x:Static strings:AppStrings.ReportAnIssueDescription}" />
            </VerticalStackLayout>
         </Border>

         <!-- Footer -->
         <Label
            Text="{x:Static strings:AppStrings.MadeWithLove}"
            FontSize="12"
            TextColor="{AppThemeBinding Light={StaticResource GameButtonBackgroundLight}, Dark={StaticResource GameButtonBackgroundDark}}"
            HorizontalOptions="Center"
            Margin="0,10,0,20" />

      </VerticalStackLayout>
   </ScrollView>
</ContentPage>
