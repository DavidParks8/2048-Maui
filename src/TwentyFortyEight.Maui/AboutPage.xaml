<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
   xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
   xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
   xmlns:strings="clr-namespace:TwentyFortyEight.Maui.Resources.Strings"
   x:Class="TwentyFortyEight.Maui.AboutPage"
   Title="{x:Static strings:AppStrings.AboutPageTitle}"
   Background="{AppThemeBinding Light={StaticResource PageBackgroundLight}, Dark={StaticResource PageBackgroundDark}}">

   <ScrollView Padding="16">
      <VerticalStackLayout Spacing="20">

         <!-- Main Message Section -->
         <VerticalStackLayout Spacing="8">
            <Border
               Background="{AppThemeBinding Light={StaticResource NativeSettingsCellBackgroundLight}, Dark={StaticResource NativeSettingsCellBackgroundDark}}"
               Stroke="Transparent"
               Padding="20,24">
               <Border.StrokeShape>
                  <RoundRectangle CornerRadius="{StaticResource NativeCardCornerRadius}" />
               </Border.StrokeShape>
               <VerticalStackLayout Spacing="20">
                  <Label
                     Text="{x:Static strings:AppStrings.ForTaliaTitle}"
                     FontSize="28"
                     FontAttributes="Bold"
                     TextColor="{AppThemeBinding Light={StaticResource NativeTextPrimaryLight}, Dark={StaticResource NativeTextPrimaryDark}}"
                     HorizontalOptions="Center" />

                  <Label
                     FontSize="17"
                     TextColor="{AppThemeBinding Light={StaticResource NativeTextSecondaryLight}, Dark={StaticResource NativeTextSecondaryDark}}"
                     LineHeight="1.5"
                     HorizontalTextAlignment="Center">
                     <Label.FormattedText>
                        <FormattedString>
                           <Span Text="{x:Static strings:AppStrings.AboutMessagePart1}" />
                           <Span Text="&#x0a;&#x0a;" />
                           <Span Text="{x:Static strings:AppStrings.AboutMessagePart2}" />
                           <Span Text="&#x0a;&#x0a;" />
                           <Span Text="{x:Static strings:AppStrings.AboutMessagePart3}" />
                           <Span Text="&#x0a;&#x0a;" />
                           <Span Text="{x:Static strings:AppStrings.AboutMessageSignature}" FontAttributes="Italic" />
                        </FormattedString>
                     </Label.FormattedText>
                  </Label>
               </VerticalStackLayout>
            </Border>
         </VerticalStackLayout>

         <!-- App Info Section -->
         <VerticalStackLayout Spacing="8">
            <Label
               Text="{x:Static strings:AppStrings.AboutTheAppSection}"
               FontSize="13"
               TextColor="{AppThemeBinding Light={StaticResource NativeTextTertiaryLight}, Dark={StaticResource NativeTextTertiaryDark}}"
               Margin="8,0,0,0" />
            
            <Border
               Background="{AppThemeBinding Light={StaticResource NativeSettingsCellBackgroundLight}, Dark={StaticResource NativeSettingsCellBackgroundDark}}"
               Stroke="Transparent"
               Padding="16">
               <Border.StrokeShape>
                  <RoundRectangle CornerRadius="{StaticResource NativeCardCornerRadius}" />
               </Border.StrokeShape>
               <VerticalStackLayout Spacing="8">
                  <Label
                     Text="{x:Static strings:AppStrings.AppNameForTalia}"
                     FontSize="17"
                     FontAttributes="Bold"
                     TextColor="{AppThemeBinding Light={StaticResource NativeTextPrimaryLight}, Dark={StaticResource NativeTextPrimaryDark}}" />

                  <Label
                     Text="{x:Static strings:AppStrings.AppDescription}"
                     FontSize="15"
                     TextColor="{AppThemeBinding Light={StaticResource NativeTextSecondaryLight}, Dark={StaticResource NativeTextSecondaryDark}}"
                     LineHeight="1.4" />
               </VerticalStackLayout>
            </Border>
         </VerticalStackLayout>

         <!-- Support Section -->
         <VerticalStackLayout Spacing="8">
            <Label
               Text="{x:Static strings:AppStrings.SupportSection}"
               FontSize="13"
               TextColor="{AppThemeBinding Light={StaticResource NativeTextTertiaryLight}, Dark={StaticResource NativeTextTertiaryDark}}"
               Margin="8,0,0,0" />
            
            <Border
               Background="{AppThemeBinding Light={StaticResource NativeSettingsCellBackgroundLight}, Dark={StaticResource NativeSettingsCellBackgroundDark}}"
               Stroke="Transparent"
               Padding="16">
               <Border.StrokeShape>
                  <RoundRectangle CornerRadius="{StaticResource NativeCardCornerRadius}" />
               </Border.StrokeShape>
               <VerticalStackLayout Spacing="16">
                  <Label
                     Text="{x:Static strings:AppStrings.NeedHelpOrBug}"
                     FontSize="15"
                     TextColor="{AppThemeBinding Light={StaticResource NativeTextSecondaryLight}, Dark={StaticResource NativeTextSecondaryDark}}" />

                  <Button
                     x:Name="GitHubIssuesButton"
                     Text="{x:Static strings:AppStrings.ReportAnIssue}"
                     FontSize="17"
                     FontAttributes="Bold"
                     BackgroundColor="{AppThemeBinding Light={StaticResource NativeButtonBackgroundLight}, Dark={StaticResource NativeButtonBackgroundDark}}"
                     TextColor="{AppThemeBinding Light={StaticResource NativeButtonTextLight}, Dark={StaticResource NativeButtonTextDark}}"
                     CornerRadius="8"
                     Padding="16,12"
                     Clicked="OnGitHubIssuesClicked"
                     SemanticProperties.Description="{x:Static strings:AppStrings.ReportAnIssueDescription}" />
               </VerticalStackLayout>
            </Border>
         </VerticalStackLayout>

         <!-- Footer -->
         <Label
            Text="{x:Static strings:AppStrings.MadeWithLove}"
            FontSize="12"
            TextColor="{AppThemeBinding Light={StaticResource NativeTextTertiaryLight}, Dark={StaticResource NativeTextTertiaryDark}}"
            HorizontalOptions="Center"
            Margin="0,10,0,20" />

      </VerticalStackLayout>
   </ScrollView>
</ContentPage>
