<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Color x:Key="Primary">#512BD4</Color>
    <Color x:Key="Secondary">#DFD8F7</Color>
    <Color x:Key="Tertiary">#2B0B98</Color>
    <Color x:Key="White">White</Color>
    <Color x:Key="Black">Black</Color>
    <Color x:Key="Gray100">#E1E1E1</Color>
    <Color x:Key="Gray200">#C8C8C8</Color>
    <Color x:Key="Gray300">#ACACAC</Color>
    <Color x:Key="Gray400">#919191</Color>
    <Color x:Key="Gray500">#6E6E6E</Color>
    <Color x:Key="Gray600">#404040</Color>
    <Color x:Key="Gray900">#212121</Color>
    <Color x:Key="Gray950">#141414</Color>

    <!-- 2048 Game Theme Colors -->
    <Color x:Key="PageBackgroundLight">#F2F2F7</Color>
    <Color x:Key="PageBackgroundDark">#000000</Color>

    <Color x:Key="GamePanelBackgroundLight">#bbada0</Color>
    <Color x:Key="GamePanelBackgroundDark">#3c3a32</Color>

    <Color x:Key="GameButtonBackgroundLight">#8f7a66</Color>
    <Color x:Key="GameButtonBackgroundDark">#5a4a3a</Color>

    <Color x:Key="GameStatusAccent">#f67c5f</Color>
    
    <Color x:Key="SectionHeaderLight">#eee4da</Color>
    <Color x:Key="SectionHeaderDark">#cdc1b4</Color>

    <Color x:Key="ModalBackgroundLight">#faf8ef</Color>
    <Color x:Key="ModalBackgroundDark">#2a2a2a</Color>
    <Color x:Key="ModalOverlay">#80000000</Color>

    <Color x:Key="GameTextMutedDark">#a0968b</Color>

    <!-- Native Text Colors -->
    <Color x:Key="NativeTextPrimaryLight">#000000</Color>
    <Color x:Key="NativeTextPrimaryDark">#FFFFFF</Color>
    <Color x:Key="NativeTextSecondaryLight">#3C3C43</Color>
    <Color x:Key="NativeTextSecondaryDark">#EBEBF5</Color>
    <Color x:Key="NativeTextTertiaryLight">#8E8E93</Color>
    <Color x:Key="NativeTextTertiaryDark">#AEAEB2</Color>

    <!-- Native Switch/Slider Accent -->
    <Color x:Key="NativeAccentLight">#007AFF</Color>
    <Color x:Key="NativeAccentDark">#0A84FF</Color>

    <!-- Native Settings/List Backgrounds -->
    <Color x:Key="NativeSettingsCellBackgroundLight">#FFFFFF</Color>
    <Color x:Key="NativeSettingsCellBackgroundDark">#1C1C1E</Color>

    <!-- Corner Radius -->
    <x:Double x:Key="NativeCardCornerRadius">20</x:Double>

</ResourceDictionary>
