<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:TwentyFortyEight.Maui.Components"
             x:Class="TwentyFortyEight.Maui.Components.SettingToggleRow"
             x:DataType="local:SettingToggleRow"
             x:Name="this">
    
    <Grid ColumnDefinitions="*,40"
          ColumnSpacing="16"
          Padding="16,12">
        <Label Grid.Column="0"
               Text="{Binding Label, Source={x:Reference this}}"
               FontSize="17"
               TextColor="{AppThemeBinding Light={StaticResource NativeTextPrimaryLight}, Dark={StaticResource NativeTextPrimaryDark}}"
               VerticalOptions="Center" />
        <Switch Grid.Column="1"
                AutomationId="{Binding AutomationId, Source={x:Reference this}}"
                IsToggled="{Binding IsToggled, Source={x:Reference this}}"
                OnColor="{AppThemeBinding Light={StaticResource NativeAccentLight}, Dark={StaticResource NativeAccentDark}}"
                ThumbColor="White"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                SemanticProperties.Description="{Binding Label, Source={x:Reference this}}"
                SemanticProperties.Hint="{Binding SemanticHint, Source={x:Reference this}}" />
    </Grid>
</ContentView>
