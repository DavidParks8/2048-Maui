<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:TwentyFortyEight.Maui.Components"
             x:Class="TwentyFortyEight.Maui.Components.NativeListRow"
             x:DataType="local:NativeListRow"
             x:Name="this">
    
    <Grid ColumnDefinitions="*,Auto" Padding="16,14">
        <Label Grid.Column="0"
               Text="{Binding Label, Source={x:Reference this}}"
               FontSize="17"
               VerticalOptions="Center" />
        <Label Grid.Column="1"
               Text="{Binding Value, Source={x:Reference this}}"
               FontSize="17"
               FontAttributes="Bold"
               VerticalOptions="Center" />
    </Grid>
</ContentView>
