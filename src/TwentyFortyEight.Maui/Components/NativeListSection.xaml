<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:TwentyFortyEight.Maui.Components"
             x:Class="TwentyFortyEight.Maui.Components.NativeListSection"
             x:DataType="local:NativeListSection"
             x:Name="this">
    
    <VerticalStackLayout Spacing="8">
        <!-- Section Header -->
        <Label x:Name="HeaderLabel"
               FontSize="13"
               TextColor="{AppThemeBinding Light={StaticResource NativeTextTertiaryLight}, Dark={StaticResource NativeTextTertiaryDark}}"
               Margin="8,0,0,0" />
        
        <!-- Section Content Border -->
        <Border x:Name="ContentBorder"
                Background="{AppThemeBinding Light={StaticResource NativeSettingsCellBackgroundLight}, Dark={StaticResource NativeSettingsCellBackgroundDark}}"
                Stroke="Transparent">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="{StaticResource NativeCardCornerRadius}" />
            </Border.StrokeShape>
            <VerticalStackLayout x:Name="ContentContainer" Spacing="0" />
        </Border>
    </VerticalStackLayout>
</ContentView>
