<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TwentyFortyEight.Maui.Components.IconButton"
             x:Name="Root">
    <Border Background="{OnPlatform iOS=#40FFFFFF, Default={AppThemeBinding Light={StaticResource NativeButtonBackgroundLight}, Dark={StaticResource NativeButtonBackgroundDark}}}"
            Stroke="Transparent"
            StrokeThickness="0"
            HeightRequest="70"
            Padding="12,8"
            StrokeShape="RoundRectangle 35"
            Opacity="{Binding IsButtonEnabled, Source={x:Reference Root}, Converter={StaticResource BoolToOpacityConverter}}">
        <Border.GestureRecognizers>
            <TapGestureRecognizer Command="{Binding Command, Source={x:Reference Root}}" />
        </Border.GestureRecognizers>
        <VerticalStackLayout Spacing="4"
                             VerticalOptions="Center"
                             HorizontalOptions="Center">
            <Label Text="{Binding Icon, Source={x:Reference Root}}"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="{OnPlatform iOS=White, Default={AppThemeBinding Light={StaticResource NativeButtonTextLight}, Dark={StaticResource NativeButtonTextDark}}}"
                   HorizontalOptions="Center" />
            <Label Text="{Binding ButtonText, Source={x:Reference Root}}"
                   FontSize="12"
                   TextColor="{OnPlatform iOS=White, Default={AppThemeBinding Light={StaticResource NativeButtonTextLight}, Dark={StaticResource NativeButtonTextDark}}}"
                   HorizontalOptions="Center" />
        </VerticalStackLayout>
    </Border>
</ContentView>
